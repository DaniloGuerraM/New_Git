<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:app="http://schemas.android.com/apk/res-auto"
	 xmlns:tools="http://schemas.android.com/tools"
	 android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 android:padding="16dp"
	 tools:context=". MainActivity">

	<EditarTexto
	 android:id="@+id/editTextNumber1"
	 android:layout_width="0dp"
	 android:layout_height="wrap_content"
	 android:layout_marginTop="32dp"
	 android:hint="Número 1"
	 android:inputType="numberDecimal"
	 app:layout_constraintEnd_toEndOf="padre"
	 app:layout_constraintStart_toStartOf="padre"
	 app:layout_constraintTop_toTopOf="padre"
	 android:padding="10dp"/>

	<EditarTexto
	 android:id="@+id/editTextNumber2"
	 android:layout_width="0dp"
	 android:layout_height="wrap_content"
	 android:layout_marginTop="16dp"
	 android:hint="Número 2"
	 android:inputType="numberDecimal"
	 app:layout_constraintEnd_toEndOf="padre"
	 app:layout_constraintStart_toStartOf="padre"
	 app:layout_constraintTop_toBottomOf="@id/editTextNumber1"
	 android:padding="10dp"/>

	<Botón
	 android:id="@+id/buttonSum"
	 android:layout_width="0dp"
	 android:layout_height="wrap_content"
	 android:layout_marginTop="16dp"
	 android:text="Sumar"
	 app:layout_constraintEnd_toEndOf="padre"
	 app:layout_constraintStart_toStartOf="padre"
	 app:layout_constraintTop_toBottomOf="@id/editTextNumber2"
	 android:padding="10dp"/>

	<Botón
	 android:id="@+id/buttonSubtract"
	 android:layout_width="0dp"
	 android:layout_height="wrap_content"
	 android:layout_marginTop="8dp"
	 android:text="Restar"
	 app:layout_constraintEnd_toEndOf="padre"
	 app:layout_constraintStart_toStartOf="padre"
	 app:layout_constraintTop_toBottomOf="@id/buttonSum"
	 android:padding="10dp"/>

	<Botón
	 android:id="@+id/buttonMultiply"
	 android:layout_width="0dp"
	 android:layout_height="wrap_content"
	 android:layout_marginTop="8dp"
	 android:text="Multiplicar"
	 app:layout_constraintEnd_toEndOf="padre"
	 app:layout_constraintStart_toStartOf="padre"
	 app:layout_constraintTop_toBottomOf="@id/buttonSubtract"
	 android:padding="10dp"/>

	<Botón
	 android:id="@+id/buttonDivide"
	 android:layout_width="0dp"
	 android:layout_height="wrap_content"
	 android:layout_marginTop="8dp"
	 android:text="Dividir"
	 app:layout_constraintEnd_toEndOf="padre"
	 app:layout_constraintStart_toStartOf="padre"
	 app:layout_constraintTop_toBottomOf="@id/botónMultiplicar"
	 android:padding="10dp"/>

	<TextView
	 android:id="@+id/textViewResult"
	 android:layout_width="wrap_content"
	 android:layout_height="wrap_content"
	 android:layout_marginTop="32dp"
	 android:text="Resultado"
	 android:textSize="18sp"
	 android:textColor="@color/colorText"
	 app:layout_constraintEnd_toEndOf="padre"
	 app:layout_constraintStart_toStartOf="padre"
	 app:layout_constraintTop_toBottomOf="@id/buttonDivide" />

</androidx.constraintlayout.widget.ConstraintLayout>